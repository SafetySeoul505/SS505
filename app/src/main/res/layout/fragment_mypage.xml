<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#2F3659"
        android:orientation="vertical"
        >


        <!-- 상단 Main Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2E3559"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            >

            <!-- Profile Image -->
            <ImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <!-- mypage_name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_header_name"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />

                    <!-- nim -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 님"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_header_email"
                        android:textColor="#8c8c8c"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프로필 보기"
                        android:backgroundTint="#3C5A91"
                        />

                </LinearLayout>




            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="310dp"
        >

        <Button
            android:id="@+id/btn_set_woodong"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="우리동네 설정"
            android:textSize="25dp"
            android:backgroundTint="#3C5A91"
            />

        <Button
            android:id="@+id/btn_my_post"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="내 게시물 관리"
            android:textSize="25dp"
            android:backgroundTint="#3C5A91"
            android:layout_marginTop="80dp"
            />

        <Button
            android:id="@+id/btn_my_comment"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="내 댓글 관리"
            android:textSize="25dp"
            android:backgroundTint="#3C5A91"
            android:layout_marginTop="160dp"
            />

        <Button
            android:id="@+id/btn_use_point"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="포인트 관리"
            android:textSize="25dp"
            android:backgroundTint="#3C5A91"
            android:layout_marginTop="240dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="665dp"
            android:layout_marginLeft="30dp"
            android:text="버그신고"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="665dp"
            android:layout_marginLeft="165dp"
            android:text="고객센터"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="665dp"
            android:layout_marginLeft="310dp"
            android:text="설정"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>